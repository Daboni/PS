#include <string>
#include <vector>
#include <cmath>

using namespace std;

int solution(string name) {
    int answer = 0;
    
    int n = name.size()-1;
    int step = n;
    int next =0;
    for (int i = 0; i < name.size(); i++) {
        next = i+1;
        
        answer += (int)min(name[i]-'A','Z'+1-name[i]);

        while(next<name.size()&&name[next]=='A') next++;
        
        step = min(step,n-next+1+i+i);
    }
    answer += step;
    return answer;
}
