#include <string>
#include <vector>

using namespace std;

int solution(int n, vector<int> lost, vector<int> reserve) {
    int answer = 0;

	vector<int> stu(n+1, 1);
	
	for (int i = 0; i < lost.size(); i++) {
		stu[lost[i]] = 0;
	}
	for (int i = 0; i < reserve.size(); i++) {
		stu[reserve[i]] = stu[reserve[i]] + 1;
	}
	
	for (int i = stu.size() - 1; i != 0; i--) {
		if ((stu[i] == 2) && (stu[i - 1] == 0)) {
			stu[i] = stu[i] - 1;
			stu[i-1] = stu[i-1] +1;

		}
	}
	for (int i = 1; i < stu.size()-1;i++) {
		if ((stu[i] == 2) && (stu[i + 1] == 0)) {
			stu[i] = stu[i] - 1;
			stu[i + 1] = stu[i + 1] + 1;

		}
	}

	for (int i = 1; i < stu.size(); i++) 
		if (stu[i] !=0) answer++;

    return answer;
}
